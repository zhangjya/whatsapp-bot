{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
		"baseUrl": "./",
    "paths": {
      "/@/*": ["src/*"],
      "/@images/*": ["src/assets/images/*"]
    }
  },
  "include": ["src", "types/**/*.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
